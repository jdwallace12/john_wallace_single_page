<script>

    //    play sounds when person mouses over footer area
    var waterfall = $('#waterfall')[0]
    $('.footer').on('mouseenter', function () {
        waterfall.play();
        waterfall.volume = .3;
    });

    //    stop play sounds when they leave footer
    $('.footer').on('mouseleave', function () {
        waterfall.pause();
    });

    //smooth scroll link in the header
    var hashTagActive = "";
    $("#objective-link").click(function (event) {
        if (hashTagActive != this.hash) { //this will prevent if the user click several times the same link to freeze the scroll.
            event.preventDefault();
            //calculate destination place
            var dest = 0;
            if ($(this.hash).offset().top > $(document).height() - $(window).height()) {
                dest = $(document).height() - $(window).height();
            } else {
                dest = $(this.hash).offset().top;
            }
            //go to destination
            $('html,body').animate({
                scrollTop: dest
            }, 5000, 'swing');
            hashTagActive = this.hash;
        }
    });

    //smooth scroll back to top probably could do this with skrollr
    var hashTagActive = "";
    $("#back-to-top-link").click(function (event) {
        if (hashTagActive != this.hash) { //this will prevent if the user click several times the same link to freeze the scroll.
            event.preventDefault();
            //calculate destination place
            var dest = 0;
            if ($(this.hash).offset().top > $(document).height() - $(window).height()) {
                dest = $(document).height() - $(window).height();
            } else {
                dest = $(this.hash).offset().top;
            }
            //go to destination
            $('html,body').animate({
                scrollTop: dest
            }, 2000, 'swing');
            hashTagActive = this.hash;
        }
    });
</script>

